@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}



<div class="row">
    <div class="col-md-4">
        <h1>@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Почта</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Пароль</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Подтверждение пароля</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <h4>Кто вы?</h4>
            <div class="radio-roles">
                <div>
                    <input asp-for = "Input.Role" type="radio" value="Visitor" aria-required="true"> Посетитель
                </div>
                <div>
                    <input asp-for="Input.Role" type="radio" value="Ogranization" aria-required="true"> Организация             
                </div>                          
            </div>
            <br />
            <span asp-validation-for="Input.Role" class="text-danger"></span>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Зарегистрироваться</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
