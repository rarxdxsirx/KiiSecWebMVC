@model IEnumerable<KiiSec.Models.Organization>

@{
    ViewData["Title"] = "Список организаций";

}

<h1>Список организаций</h1>

<p>
    <a asp-action="Register">Создать новую</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Название
            </th>
            <th>
                Логин
            </th>
            <th>
                Email
            </th>
            <th>
                Номер телефона
            </th>
            <th>
                Специализация
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>

            <td>
                    @Html.ActionLink("Изменить", "Edit", new { organizationId = item.ID }) |
                    @Html.ActionLink("Детали", "DetailsForAdmins", new { organizationId = item.ID }) |
                    @Html.ActionLink("Удалить", "Delete", new { organizationId = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
