@model KiiSec.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление работника</h1>

<h3>Вы уверены, что хотите удалить данную запись?</h3>
<div>
    <h4>Работник</h4>
    <hr />
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="OrganizationId" class="control-label">ID Организации</label>
            <input asp-for="OrganizationId" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Department" class="control-label">Отделение</label>
            <input asp-for="Department" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">Имя</label>
            <input asp-for="FirstName" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label">Фамилия</label>
            <input asp-for="LastName" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="MiddleName" class="control-label">Отчество</label>
            <input asp-for="MiddleName" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
            <input asp-for="PhoneNumber" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Login" class="control-label">Логин</label>
            <input asp-for="Login" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="BirthDate" class="control-label">Дата рождения</label>
            <input asp-for="BirthDate" class="form-control" type="date" readonly="readonly" />
        </div>
        <div class="form-group">
            <input type="submit" value="Удалить" class="btn btn-danger" />       
        </div>
    </form>
    @Html.ActionLink("Вернуться к списку", "List", new {organizationId = Model.OrganizationId})
</div>
