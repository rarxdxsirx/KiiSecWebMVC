@model KiiSec.Models.Employee

@{
    ViewData["Title"] = "Изменить";
}

<h4>Редактирование данных работника</h4>
<hr />
<div class="row">
    
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label">ID Организации</label>
                <input asp-for="OrganizationId" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label">Отделение</label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger">Обязательное поле.</span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Имя</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger">Обязательное поле.</span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Фамилия</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger">Обязательное поле.</span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label">Отчество</label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger">Обязательное поле.</span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger">Обязательное поле.</span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label">Логин</label>
                <input asp-for="Login" class="form-control"  />
                <span asp-validation-for="Login" class="text-danger">Обязательное поле.</span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">День рождения</label>
                <input type="date" class="form-contol" asp-for="BirthDate" />
                <span asp-validation-for="BirthDate" class="text-danger">Обязательное поле.</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @Html.ActionLink("Вернуться к списку", "List", new {organizationId = Model.OrganizationId})
</div>

